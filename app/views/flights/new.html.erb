<h1>New flight</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@flight) do |f| %>
      <%= f.label :flight_number %>
      <%= f.text_field :num_flight %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <%= f.label :departure_time %>
      <%= f.text_field :depart %>

      <%= f.label :from %>
      <%= f.text_field :from %>

      <%= f.label :to %>
      <%= f.text_field :to %>

      <%= f.label :duration %>
      <%= f.text_field :duration %>

      <%= f.label :cost %>
      <%= f.text_field :cost %>

      <%= f.label :passengers %>
      <%= f.text_field :passengers %>

      <%= f.submit "Create flight", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>